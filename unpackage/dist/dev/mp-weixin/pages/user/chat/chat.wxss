page {
  height: 100%;
}
.content {
  height: 100%;
  background-color: #f4f4f4;
}
.chat {
  height: 100%;
}
.chat .chat-main {
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}
.chat .chat-ls .chat-time {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.3);
  line-height: 34rpx;
  padding: 10rpx 0rpx;
  text-align: center;
}
.chat .chat-ls .msg-m {
  display: flex;
  padding: 20rpx 0;
}
.chat .chat-ls .msg-m .user-img {
  flex: none;
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-m .message {
  flex: none;
  max-width: 480rpx;
}
.chat .chat-ls .msg-m .msg-text {
  font-size: 32rpx;
  color: #272832;
  line-height: 44rpx;
  padding: 18rpx 24rpx;
}
.chat .chat-ls .msg-m .msg-img {
  max-width: 400rpx;
  border-radius: 20rpx;
}
.chat .chat-ls .msg-m .msg-map {
  background: #fff;
  width: 464rpx;
  height: 284rpx;
  overflow: hidden;
}
.chat .chat-ls .msg-m .msg-map .map-name {
  font-size: 32rpx;
  color: #272832;
  line-height: 44rpx;
  padding: 18rpx 24rpx 0 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.chat .chat-ls .msg-m .msg-map .map-address {
  font-size: 24rpx;
  color: rgba(39, 40, 50, 0.4);
  padding: 0 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.chat .chat-ls .msg-m .msg-map .map {
  padding-top: 8rpx;
  width: 464rpx;
  height: 190rpx;
}
.chat .chat-ls .msg-m .voice {
  min-width: 100rpx;
  max-width: 400rpx;
}
.chat .chat-ls .msg-m .voice-img {
  width: 28rpx;
  height: 36rpx;
}
.chat .chat-ls .msg-left {
  flex-direction: row;
}
.chat .chat-ls .msg-left .msg-text {
  margin-left: 16rpx;
  background-color: #fff;
  border-radius: 0rpx 20rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-left .ms-img {
  margin-left: 16rpx;
}
.chat .chat-ls .msg-left .msh-map {
  margin-left: 16rpx;
  border-radius: 0rpx 20rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-left .voice {
  text-align: right;
}
.chat .chat-ls .msg-left .voice-img {
  float: left;
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
  width: 36rpx;
  height: 42rpx;
  padding-bottom: 4rpx;
}
.chat .chat-ls .msg-right {
  flex-direction: row-reverse;
}
.chat .chat-ls .msg-right .msg-text {
  margin-right: 16rpx;
  background-color: rgba(255, 228, 49, 0.8);
  border-radius: 20rpx 0rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-right .ms-img {
  margin-right: 16rpx;
}
.chat .chat-ls .msg-right .msh-map {
  margin-left: 16rpx;
  border-radius: 20rpx 0rpx 20rpx 20rpx;
}
.chat .chat-ls .msg-right .voice {
  text-align: left;
}
.chat .chat-ls .msg-right .voice-img {
  float: right;
  padding: 4rpx;
  width: 36rpx;
  height: 42rpx;
}

